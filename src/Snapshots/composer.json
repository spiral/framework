            "name": "Maksim Smakouz (msmakouz)",
            "email": "maksim.smakouz@spiralscout.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "spiral/exceptions": "^3.15.1",
        "spiral/files": "^3.15.1",
        "symfony/finder": "^5.4.45 || ^6.4.17 || ^7.2"
    },
    "require-dev": {
        "spiral/storage": "^3.15.1",
        "phpunit/phpunit": "^10.5.41",
        "vimeo/psalm": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "Spiral\\Snapshots\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Spiral\\Tests\\Snapshots\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "3.15.x-dev"
        }
    },
    "suggest": {
        "spiral/storage": "For storing snapshots using storage abstraction"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
