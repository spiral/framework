{
    "name": "spiral/hmvc",
    "type": "library",
    "description": "HMVC Core and Controllers",
    "license": "MIT",
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/spiral"
        }
    ],
    "homepage": "https://spiral.dev",
    "support": {
        "issues": "https://github.com/spiral/framework/issues",
        "source": "https://github.com/spiral/hmvc",
        "docs": "https://spiral.dev/docs",
        "chat": "https://discord.gg/V6EK4he"
    },
    "authors": [
        {
            "name": "Anton Titov (wolfy-j)",
            "email": "wolfy-j@spiralscout.com"
        },
        {
            "name": "Pavel Butchnev (butschster)",
            "email": "pavel.buchnev@spiralscout.com"
        },
        {
            "name": "Aleksei Gagarin (roxblnfk)",
            "email": "alexey.gagarin@spiralscout.com"
        },
        {
            "name": "Maksim Smakouz (msmakouz)",
            "email": "maksim.smakouz@spiralscout.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "spiral/core": "^3.14.4",
        "psr/event-dispatcher": "^1.0",
        "spiral/interceptors": "^3.14.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.1",
        "vimeo/psalm": "^5.9",
        "spiral/testing": "^2.8"
    },
    "autoload": {
        "psr-4": {
            "Spiral\\Core\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Spiral\\Tests\\Core\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "3.15.x-dev"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "psalm": "psalm",
        "psalm:baseline": "psalm --set-baseline=psalm-baseline.xml",
        "psalm:ci": "psalm --output-format=github --shepherd --show-info=false --stats --threads=4",
        "test": [
            "@putenv XDEBUG_MODE=coverage",
            "phpunit --color=always"
        ],
        "test:cc": [
            "@putenv XDEBUG_MODE=coverage",
            "phpunit --coverage-clover=runtime/phpunit/logs/clover.xml --color=always"
        ]
    }
}
